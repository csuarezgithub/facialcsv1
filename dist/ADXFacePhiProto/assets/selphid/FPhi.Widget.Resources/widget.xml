        font_size="18.0"
        mode="Normal"
        />

        <text id="warning"
        color="#ff0000"
        font="CircularStd-Medium.otf"
        font_size="18.0"
        mode="Warning"
        />
        
        <buttonImage id="button_exit" value="cruz-icon.png"/>
        <buttonImage id="button_info" value="info-icon.png"/>
        <buttonImage id="button_camera" value="camera-icon.png"/>
        
        <initialTip id="initial_tip"
        backgroundColor="#ffffff"
        font="CircularStd-Medium.otf"
        font_size="16.0"
        line_height="19"
        color="#767d85"
        image="info-icon-gray.png"
